<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMember"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/member"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@id/ivMember"
        app:layout_constraintTop_toTopOf="@id/ivMember"
        app:layout_constraintBottom_toBottomOf="@id/ivMember"/>

    <Button
        android:id="@+id/btnEditPemain"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/white"
        android:text="Edit"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@id/ivMember"
        app:layout_constraintTop_toTopOf="@id/ivMember"
        app:layout_constraintBottom_toBottomOf="@id/ivMember"/>


    <TextView
        android:id="@+id/tvNamaMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/no_virus"
        android:text="Rendy Setiawan"
        android:textColor="#ffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivMember"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/ivMember" />

    <TextView
        android:id="@+id/tvEmailMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:text="rendysetiawanadisaputra@gmail.com"
        android:textColor="#ffff"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvNamaMember"
        app:layout_constraintTop_toBottomOf="@id/tvNamaMember" />

</androidx.constraintlayout.widget.ConstraintLayout>