<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTambahLawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Pemain"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etNamaPemainTambahan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="masukkan nama"
        app:layout_constraintStart_toStartOf="@id/tvTambahLawan"
        app:layout_constraintEnd_toEndOf="@id/tvTambahLawan"
        app:layout_constraintTop_toBottomOf="@id/tvTambahLawan"/>
    <EditText
        android:id="@+id/etEmailPemainTambahan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="masukkan email"
        app:layout_constraintStart_toStartOf="@id/etNamaPemainTambahan"
        app:layout_constraintEnd_toEndOf="@id/etNamaPemainTambahan"
        app:layout_constraintTop_toBottomOf="@id/etNamaPemainTambahan"/>
    <Button
        android:id="@+id/btnSimpanPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="simpan"
        app:layout_constraintStart_toStartOf="@id/etEmailPemainTambahan"
        app:layout_constraintEnd_toEndOf="@id/etEmailPemainTambahan"
        app:layout_constraintTop_toBottomOf="@id/etEmailPemainTambahan"/>


</androidx.constraintlayout.widget.ConstraintLayout>