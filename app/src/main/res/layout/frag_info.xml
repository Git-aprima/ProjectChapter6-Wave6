<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDE9F6"
    tools:context=".ui.menu.Info">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vSeri"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <View
        android:id="@+id/vMenang"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <TextView
        android:id="@+id/tvScoreMenang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/vMenang"
        app:layout_constraintEnd_toEndOf="@id/vMenang"
        app:layout_constraintStart_toStartOf="@id/vMenang"
        app:layout_constraintTop_toTopOf="@id/vMenang"
        app:layout_constraintVertical_bias="0.416" />

    <View
        android:id="@+id/vKalah"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <TextView
        android:id="@+id/tvScoreKalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/vKalah"
        app:layout_constraintEnd_toEndOf="@id/vKalah"
        app:layout_constraintStart_toStartOf="@id/vKalah"
        app:layout_constraintTop_toTopOf="@id/vKalah"
        app:layout_constraintVertical_bias="0.416" />

    <ImageView
        android:id="@+id/tvScore"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/score1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMenang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menang"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/tvSeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seri"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore"
        app:layout_constraintStart_toEndOf="@id/tvMenang"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/tvScoreSeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/vSeri"
        app:layout_constraintEnd_toEndOf="@id/vSeri"
        app:layout_constraintStart_toStartOf="@id/vSeri"
        app:layout_constraintTop_toTopOf="@id/vSeri"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/tvKalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalah"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore"
        app:layout_constraintStart_toEndOf="@id/tvSeri"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_baseline_home"
        app:layout_constraintEnd_toStartOf="@id/tvSeri"
        app:layout_constraintTop_toBottomOf="@id/ivSplash1" />

    <ImageView
        android:id="@+id/ivReset"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_baseline_autorenew"
       app:layout_constraintTop_toBottomOf="@id/ivSplash1"
        app:layout_constraintStart_toEndOf="@id/tvSeri"/>

    <ImageView
        android:id="@+id/ivSplash1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/ic_splash_screen1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>