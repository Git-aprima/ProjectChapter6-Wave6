<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DDE9F6"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".ui.play.VsCpu">

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/hey_comic"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toEndOf="@id/batu1"
        app:layout_constraintStart_toStartOf="@id/batu1"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <TextView
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CPU"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#08CBFB"
        android:fontFamily="@font/hey_comic"
        app:layout_constraintBottom_toBottomOf="@id/pemain"
        app:layout_constraintEnd_toEndOf="@id/batu2"
        app:layout_constraintStart_toStartOf="@id/batu2"/>

    <ImageView
        android:id="@+id/batu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/batu"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintTop_toBottomOf="@+id/pemain" />

    <ImageView
        android:id="@+id/batu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/batu"
        app:layout_constraintBottom_toBottomOf="@id/batu1"
        app:layout_constraintStart_toEndOf="@id/status"/>

    <ImageView
        android:id="@+id/kt1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kertas"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintTop_toBottomOf="@+id/batu1" />

    <ImageView
        android:id="@+id/kt2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kertas"
        app:layout_constraintBottom_toBottomOf="@id/kt1"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintTop_toBottomOf="@id/batu2" />

    <ImageView
        android:id="@+id/gt1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gunting"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintTop_toBottomOf="@+id/kt1" />

    <ImageView
        android:id="@+id/gt2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gunting"
        app:layout_constraintBottom_toBottomOf="@id/gt1"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintTop_toBottomOf="@id/kt2" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/vs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_refresh_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
